#!/bin/sh

alias \
    free="free --mebi"\
	cp="cp --interactive"\
	df="df --human-readable"\
	diff="diff --color=auto"\
	egrep="egrep --colour=auto"\
	fgrep="fgrep --colour=auto"\
	ga="git add -A"\
	gc="git commit -m"\
	grep="grep --colour=auto"\
	gs="git status"\
	hcat="highlight --out-format=ansi"\
	hcatt="highlight --src-lang"\
	ll='ls --color=auto -alF'\
	ls="ls --literal --human-readable --color=auto --group-directories-first "\
	mkd="mkdir -pv"\
	starwars="telnet towel.blinkenlights.nl"\
	inxi="inxi -FxxxzD"

# Dotfiles managment
alias \
	dotc="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME commit -m"\
	dots="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME status"\
	dot="/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME"\

[[ `command -v exa` ]] && alias \
	ll="exa --icons -al"\
	ls="exa --icons"

# Neovim || Flatpak Neovim
alias \
	nvim="nvim || io.neovim.nvim" \
	nvimd="nvim -d || io.neovim.nvim -d"

# For Raspberry Pi 
[[ `command -v /opt/vc/bin/vcgencmd` ]] && alias \
    temp="/opt/vc/bin/vcgencmd measure_temp"

alias code='[[ $(command -v /usr/bin/code) ]] && code || com.visualstudio.code.oss'
