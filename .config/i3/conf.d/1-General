# This is what merges all of the config files into one.
set $i3restart "exec cat ~/.config/i3/conf.d/* > ~/.config/i3/config && i3-msg restart"


#Autostart Programs
exec        "setxkbmap -model pc104 -layout us,gr -variant ,, -option grp:alt_shift_toggle"
exec        /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec        "eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)"
exec_always checkup
exec_always xwallpaper --center ~/.config/wall.png

# Programs
set $term         $TERMINAL
set $browsr       $BROWSER
# set $myeditor   $EDITOR
set $myeditor     subl3
set $launcher     i3-dmenu-desktop # \\"--dmenu=dmenu -i -nf '#BBBBBB' -nb '#505050' -sb '#282828' -sf '#EEEEEE'\\"
set $fm           pcmanfm
set $calc         galculator
set $screenshot   maim -m 1                               ~/Pictures/Screenshots/$(date '+%Y-%m-%d-%H:%M:%S').png
set $snipwindow   maim -m 1 -i $(xdotool getactivewindow) ~/Pictures/Screenshots/$(date '+%Y-%m-%d-%H:%M:%S').png
set $sniparea     maim -m 1 -s                            ~/Pictures/Screenshots/$(date '+%Y-%m-%d-%H:%M:%S').png
set $volup        pactl set-sink-volume 0 +2%
set $voldown      pactl set-sink-volume 0 -4%
set $volmute      pactl set-sink-mute   0 toggle
set $playlink     mpv   $(xclip -o)
set $mediaplay    playerctl play-pause
set $medianext    playerctl next
set $mediaprev    playerctl previous
# set $netrefresh sudo -A systemctl restart systemd-networkd.service

set $Pause-break  System (l)lock, (k) locktoblack, (e) exit, (s) suspend, (r) reboot, (End) shutdown
set $lock         i3lock -e -f -c 000000 -i ~/.config/wall.png -t
mode "$Pause-break" {
    bindsym e       exec --no-startup-id i3-msg     				exit,           mode "default"
    bindsym s       exec --no-startup-id systemctl 		 			suspend,  		mode "default"
    bindsym r       exec --no-startup-id systemctl  				reboot,         mode "default"
    bindsym End     exec --no-startup-id systemctl  				poweroff -i,    mode "default"
    bindsym l       exec --no-startup-id 							$lock,          mode "default"
    bindsym k       exec --no-startup-id "$lock; sleep 5 && xset dpms force off",   mode "default"


    bindsym Return  mode "default"
    bindsym Escape  mode "default"
}

