

#Autostart Programs
exec        "setxkbmap -model pc104 -layout us,gr -variant ,, -option grp:alt_shift_toggle"
exec        /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec        "eval $(/usr/bin/gnome-keyring-daemon --start --components=pkcs11,secrets,ssh)"
exec_always checkup
exec_always xwallpaper --center ~/.config/wall.png

# Programs
set $term         $TERMINAL
set $browsr       $BROWSER
# set $myeditor   $EDITOR
set $myeditor     subl3
set $fm           pcmanfm
set $calc         galculator
set $volup        pactl set-sink-volume 0 +2%
set $voldown      pactl set-sink-volume 0 -4%
set $volmute      pactl set-sink-mute   0 toggle
set $mediaplay    playerctl play-pause 	&& pkill -RTMIN+10 i3blocks
set $medianext    playerctl next 		&& pkill -RTMIN+10 i3blocks
set $mediaprev    playerctl previous 	&& pkill -RTMIN+10 i3blocks

set $Pause-break  System (l)lock, (k) locktoblack, (e) exit, (s) suspend, (r) reboot, (End) shutdown
mode "$Pause-break" {
    bindsym e       exec --no-startup-id wmexit, 				mode "default"
    bindsym s       exec --no-startup-id systemctl suspend,  	mode "default"
    bindsym r       exec --no-startup-id systemctl reboot,      mode "default"
    bindsym End     exec --no-startup-id systemctl poweroff -i, mode "default"
    bindsym l       exec --no-startup-id wmlock,          		mode "default"
    bindsym k       exec --no-startup-id wmlock -o,   			mode "default"

    bindsym Return  mode "default"
    bindsym Escape  mode "default"
}

