exec_always { \
    gsettings set org.gnome.desktop.sound input-feedback-sounds false, \
    gsettings set org.gnome.desktop.sound event-sounds false, \
    gsettings set org.gnome.desktop.sound allow-volume-above-100-percent false, \
}

