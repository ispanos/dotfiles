#!/bin/bash

path="$HOME/.config/dconf/dconf.ini"

[[ -f "$path" ]] || { echo "File: '$path' does not exists"; exit 1; } 

[[ $(command -v dconf) ]] || { echo "dconf is missing or is not in the PATH."; exit 1; } 

gsettings get org.gnome.shell enabled-extensions > "$HOME/.config/dconf/enabled-extensions"

dconf load / < ~/.config/dconf/dconf.ini

# NOTES: Do not enable here!
# Only here to remove comments from the actual config file in `.config/donf`.

