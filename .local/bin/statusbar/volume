#!/usr/bin/env sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e pulsemixer & ;;
	2) pulsemixer --toggle-mute && pkill -RTMIN+10 i3blocks ;;
	4) pulsemixer --change-volume +5 && pkill -RTMIN+10 i3blocks ;;
	5) pulsemixer --change-volume -5 && pkill -RTMIN+10 i3blocks ;;
	3) qpaeq
#	3) pulseaudio-equalizer-gtk ;;
esac

[ "$(pulsemixer --get-mute)" = "1" ] && printf "-\\n" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -lt "50" ]; then
	icon=""
else
	icon=""
fi

#printf "%s %s%%\\n" "$icon" "$vol"
printf "$icon"
