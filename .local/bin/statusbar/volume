#!/usr/bin/env sh

case $BLOCK_BUTTON in
	1) pavucontrol ;;
	2) pactl set-sink-mute   0 toggle 	&& pkill -RTMIN+10 i3blocks ;;
	4) pactl set-sink-volume 0 +2% 		&& pkill -RTMIN+10 i3blocks ;;
	5) pactl set-sink-volume 0 -4% 		&& pkill -RTMIN+10 i3blocks ;;
	3) qpaeq
#	3) pulseaudio-equalizer-gtk ;;
esac

[ "$(pulsemixer --get-mute)" = "1" ] && printf "-\\n" && exit

vol=$(pulsemixer --get-volume | awk '{print $1}')

if [ "$vol" -lt "50" ]; then
	icon=""
else
	icon=""
fi

#printf "%s %s%%\\n" "$icon" "$vol"
printf "$icon\n"
