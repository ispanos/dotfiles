#!/bin/bash

echo "$0 $@" | systemd-cat -t "SCREENSHOT"


SAVE_DIR="$(xdg-user-dir PICTURES)/Screenshots"
[ ! -d "$SAVE_DIR" ] && mkdir -p "$SAVE_DIR"
OF="$SAVE_DIR/Screenshot from $(date '+%Y-%m-%d %H-%-M-%S').png"

sway_screenshot() {

    case "$1" in
    window)
        grim -g "$(swaymsg -t get_tree |\
            jq -j '.. | select(.type?) | select(.focused).rect | "\(.x),\(.y) \(.width)x\(.height)"')" - |
            tee "$OF" | wl-copy
    ;;
    area)
        grim -g "$(slurp)" "$OF" - |
            tee "$OF" | wl-copy
    ;;
    monitor)
        grim -o "$(swaymsg -t get_outputs |
            jq -r '.[] | select(.focused) | .name')" - |
            tee "$OF" | wl-copy
    ;;
    areaclipboard)
        grim -g "$(slurp)" - | wl-copy
    ;;
    *)
        grim "$OF"
    ;;
esac
}


case "$XDG_CURRENT_DESKTOP" in
    sway)
        sway_screenshot "$1"
    ;;
    *)
        exit 1
    ;;
esac
