#!/bin/sh

lockscreen=/usr/share/backgrounds/gnome/libadwaita-d.jpg

echo "$0 $@" | systemd-cat -t "SESSIONCTL"

case "$1" in

    dark)
        sleep 1 && xset dpms force off
        ;;

    lock)

        # [ "$XDG_CURRENT_DESKTOP" = "sway" ] &&
        swayidle \
            timeout 5 'swaymsg "output * dpms off"' \
            resume 'swaymsg "output * dpms on"' &

        swaylock -e -c 000000 -i "$lockscreen" -t
        kill $(ps aux | grep '[s]wayidle timeout 5' | awk '{print $2}')

        # if [ -x /usr/bin/gdmflexiserver ]; then
        #     gdmflexiserver
        # # else
        #     pgrep -x i3 >/dev/null && slock
        # fi
        #pgrep -x i3 >/dev/null &&
            # i3lock -e -f -c 000000 -i "$lockscreen" -t &&
            #sleep 300 && pgrep i3lock && xset dpms force off
        ;;

    instant_lock)

        # [ "$XDG_CURRENT_DESKTOP" = "sway" ] &&
        swaylock -e -c 000000 -i "$lockscreen" -t
        ;;

    logout)
        pgrep -x i3 >/dev/null && i3-msg exit
        pgrep -x sway >/dev/null && swaymsg exit && exit
        ;;

    suspend)
        systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;

    shutdown)
        systemctl poweroff
        ;;

    *)
        echo "Usage: $0 {lock|logout|suspend|reboot|shutdown}"
        exit 2
esac

exit 0
